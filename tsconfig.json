{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./assets",
    "outDir": "./temp/declarations"
  },
  "include": [
    "assets/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
